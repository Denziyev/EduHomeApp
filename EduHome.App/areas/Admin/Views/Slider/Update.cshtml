@model Slider

<div class="container">
	<form method="post" enctype="multipart/form-data">
		<div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

		<div class="form-group">
			<label asp-for="@Model.Title">Title:</label>
			<input type="text" class="form-control" asp-for="@Model.Title" />
			<span class="alert-danger" asp-validation-for="Title"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.Description">Desc:</label>
			<input type="text" class="form-control" asp-for="@Model.Description" />
			<span class="alert-danger" asp-validation-for="Description"></span>
		</div>
		<div class="form-group">
			<label asp-for="Link">Link</label>
			<input type="text" class="form-control" asp-for="Link">
			<span class="alert-danger" asp-validation-for="Link"></span>
		</div>

		<div class="form-group">
			<label asp-for="@Model.FormFile">Image:</label>
			<input type="file" class="form-control" asp-for="@Model.FormFile" />
			<span class="alert-danger" asp-validation-for="FormFile"></span>
		</div>
		<img style="width:100px;height:100px" src="~/assets/img/slider/@Model.Image" />
		@Html.AntiForgeryToken()
		<button type="submit">Update</button>
	</form>
</div>