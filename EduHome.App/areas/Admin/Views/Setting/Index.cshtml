@model IEnumerable<Setting>
<div class="container">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Welc.Title</th>
                <th scope="col">Phone 1</th>
                <th scope="col">Welcome Umage</th>
                <th scope="col">Mail</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <th>@item.WelcomeTittle</th>
                    <th>@item.Phone1</th>
                    <th> <img style="width:70px;height:70px; object-fit:cover" src="~/assets/img/Blog/@item.WelcomeImage">  </th>
                    <th>@item.MailFooter</th>
                    <td><a asp-controller="Setting" asp-action="update" asp-route-id="@item.Id"><i class="fas fa-edit text text-primary"></i></a></td>
                    <td><a onclick="if (!confirm('Are you sure to delete?')){return false;}" asp-controller="Setting" asp-action="delete" asp-route-id="@item.Id" class="delete-item"><i class="fas fa-trash text text-danger"></i></a></td>
                </tr>
            }

        </tbody>
    </table>
    <div>
        <a onclick="if (@Model.Count()==1){return false;}" asp-controller="Setting" asp-action="create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%"> <div style="width:100%; " class="btn btn-outline-success">Create Blog </div></a>
    </div>

</div>
