
@model IEnumerable<AboutWelcome>
<div class="container">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Tittle</th>
                <th scope="col">Description1</th>
                <th scope="col">Description2</th>
                <th scope="col">Image</th>
                <th scope="col">Link</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <th>@item.Title</th>
                    <th>@item.Description1</th>
                    <th>@item.Description2</th>
                    <th> <img style="width:70px;height:70px; object-fit:cover" src="~/assets/img/about/@item.Image">  </th>
                    <th>@item.Link</th>
                    <td><a asp-controller="AboutWelcome" asp-action="update" asp-route-id="@item.Id"><i class="fas fa-edit text text-primary"></i></a></td>
                    <td><a onclick="if (!confirm('Are you sure to delete?')){return false;}" asp-controller="AboutWelcome" asp-action="delete" asp-route-id="@item.Id" class="delete-item"><i class="fas fa-trash text text-danger"></i></a></td>
                </tr>
            }

        </tbody>
    </table>
    <div>
        <a onclick="if (@Model.Count()!=0){return false;}" asp-controller="AboutWelcome" asp-action="create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%"> <div style="width:100%; " class="btn btn-outline-success">Create AboutWelcome  </div></a>
    </div>

</div>
