@model Course
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<div class="container">
    <form method="post" enctype="multipart/form-data">

        <div class="form-group">
            <select class="form-select" asp-for="CategoryId" aria-label="Disabled select example">
                <option selected>Choose Category</option>
                @foreach (var item in ViewBag.Categories)
                {
                    <option value="@item.Id">@item.Name</option>
                }

            </select>
            <span class="alert-danger" asp-validation-for="CategoryId"></span>
        </div>

        <div class="form-group">
            <select multiple class="form-select" asp-for="TagIds" aria-label="Disabled select example">
                <option >Choose Tags</option>
                @foreach (var item in ViewBag.Tags)
                {
                    if (Model.CourseTags.Any(x => x.TagId == item.Id))
                    {                       
                        <option selected value="@item.Id">@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }

            </select>
            <span class="alert-danger" asp-validation-for="TagIds"></span>
        </div>

        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" class="form-control" asp-for="@Model.Name">
            <span class="alert-danger" asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label asp-for="FormFile">Image</label>
            <input   accept="image/*" type="file" class="form-control" asp-for="FormFile">
            <span class="alert-danger" asp-validation-for="FormFile"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input type="text" class="form-control" asp-for="@Model.Description">
            <span class="alert-danger" asp-validation-for="Description"></span>
        </div>

        <div class="form-group">
            <label asp-for="Abouttext">Abouttext</label>
            <input type="text" class="form-control" asp-for="@Model.Abouttext">
            <span class="alert-danger" asp-validation-for="Abouttext"></span>
        </div>

        <div class="form-group">
            <label asp-for="Applytext">Applytext</label>
            <input type="text" class="form-control" asp-for="@Model.Applytext">
            <span class="alert-danger" asp-validation-for="Applytext"></span>
        </div>
        <div class="form-group">
            <label asp-for="Certification">Certification</label>
            <input type="text" class="form-control" asp-for="@Model.Certification">
            <span class="alert-danger" asp-validation-for="Certification"></span>
        </div>
        <img style="width:100px;height:100px" src="~/assets/img/course/@Model.Image" />
        @Html.AntiForgeryToken()
        <button type="submit">Update</button>
    </form>
</div>